{
  "name": "myroofgenius-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:unit": "jest",
    "test:e2e": "start-server-and-test dev http://localhost:3000 \"playwright test\"",
    "seed": "tsx scripts/seed.ts",
    "migrate": "supabase db push",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "analyze": "ANALYZE=true next build",
    "playwright:install": "playwright install --with-deps chromium firefox webkit",
    "postinstall": "npm run playwright:install"
  },
  "dependencies": {
    "@react-three/fiber": "^8.15.0",
    "@sentry/nextjs": "^7.90.0",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/supabase-js": "^2.50.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "framer-motion": "^12.19.1",
    "lucide-react": "^0.517.0",
    "next": "14.2.30",
    "pdf-lib": "^1.17.1",
    "node-fetch": "^3.3.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-dropzone": "^14.2.3",
    "stripe": "^14.10.0",
    "three": "^0.159.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^13.1.1",
    "@playwright/test": "^1.38.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.3",
    "husky": "^8.0.0",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.0.2",
    "lint-staged": "^15.2.0",
    "msw": "^2.10.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "@tailwindcss/forms": "^0.5.7",
    "ts-jest": "^29.4.0",
    "tsx": "^3.12.7",
    "typescript": "^5.3.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "start-server-and-test": "^2.0.12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{css,scss}": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write --prose-wrap always",
      "git add"
    ]
  }
}
