# üõ°Ô∏è MyRoofGenius Environment Configuration
# Copy this to .env.local and fill in your values

# === CRITICAL (Required for basic operation) ===

# Claude AI (get from: https://console.anthropic.com/account/keys)
ANTHROPIC_API_KEY=sk-ant-api03-[...]  # Required for AI features

# Supabase (get from: https://app.supabase.com/project/_/settings/api)
NEXT_PUBLIC_SUPABASE_URL=https://[YOUR_PROJECT].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ[...]  # Public anon key (safe for browser)
SUPABASE_SERVICE_ROLE_KEY=eyJ[...]      # Service role key (server-only!)

# Stripe (get from: https://dashboard.stripe.com/apikeys)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_[...]  # Use pk_live_ for production
STRIPE_SECRET_KEY=sk_test_[...]                   # Use sk_live_ for production
STRIPE_WEBHOOK_SECRET=whsec_[...]                 # From webhook endpoint settings

# NextAuth (generate with: openssl rand -base64 32)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=[32-character-random-string]

# === FEATURES (Required for specific functionality) ===

# Backend service base URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Maps (required for roof analysis)
MAPBOX_TOKEN=pk.[...]            # From mapbox.com

# === CONFIGURATION ===

# Feature Flags
NEXT_PUBLIC_AI_COPILOT_ENABLED=true
NEXT_PUBLIC_DYNAMIC_ONBOARDING=true
NEXT_PUBLIC_RAG_ENABLED=true
NEXT_PUBLIC_MODULAR_DASHBOARD=true
NEXT_PUBLIC_AR_MODE_ENABLED=false
NEXT_PUBLIC_MAINTENANCE_MODE=false

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXX

# App Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000  # https://myroofgenius.com in production
NEXT_PUBLIC_SITE_URL=http://localhost:3000  # Domain used in sitemap/robots
NODE_ENV=development                        # production in prod

# === OPTIONAL ===

# Monitoring
NEXT_PUBLIC_SENTRY_DSN=https://[...]@[...].ingest.sentry.io/[...]
SENTRY_AUTH_TOKEN=[...]
SENTRY_ORG=myroofgenius
SENTRY_PROJECT=web

# Email (for notifications)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=SG.[...]
EMAIL_FROM=noreply@myroofgenius.com

# Redis (for sessions/cache)
REDIS_URL=redis://localhost:6379

# Database (if not using Supabase)
DATABASE_URL=postgresql://user:password@localhost:5432/myroofgenius

# CDN/Storage
NEXT_PUBLIC_CDN_URL=https://cdn.myroofgenius.com
SUPABASE_STORAGE_BUCKET=roof-images

# External APIs (optional)
OPENWEATHERMAP_API_KEY=[...]
CONVERTKIT_API_KEY=[...]
CLICKUP_API_TOKEN=[...]
NOTION_API_TOKEN=[...]

# Slack Integration (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/[...]
SLACK_BOT_TOKEN=xoxb-[...]
SLACK_SIGNING_SECRET=[...]

