{
  "id": "myroofgenius-app",
  "name": "MyRoofGenius - AI-Powered Roofing Software",
  "short_name": "MyRoofGenius",
  "description": "AI-powered roofing software with calculators, tools, and marketplace for contractors",
  "start_url": "/?utm_source=pwa&utm_medium=homescreen",
  "scope": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone"],
  "background_color": "#0a192f",
  "theme_color": "#0a192f",
  "orientation": "any",
  "lang": "en",
  "dir": "ltr",
  "icons": [
    { 
      "src": "/icon",
      "sizes": "32x32",
      "type": "image/png"
    },
    { 
      "src": "/apple-icon",
      "sizes": "180x180",
      "type": "image/png"
    },
    { 
      "src": "/icon?size=192",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    { 
      "src": "/icon?size=512",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    { 
      "src": "/icon?size=192&maskable=true",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    { 
      "src": "/icon?size=512&maskable=true",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "categories": ["business", "productivity", "utilities", "tools"],
  "shortcuts": [
    { 
      "name": "Marketplace",
      "url": "/marketplace?utm_source=pwa_shortcut",
      "description": "Browse AI-generated roofing tools and templates",
      "icons": [{ "src": "/icon?size=96", "sizes": "96x96" }] 
    },
    { 
      "name": "Demo",
      "url": "/demo?utm_source=pwa_shortcut",
      "description": "Try AI-powered roofing tools",
      "icons": [{ "src": "/icon?size=96", "sizes": "96x96" }] 
    },
    { 
      "name": "Dashboard",
      "url": "/dashboard?utm_source=pwa_shortcut",
      "description": "Access your roofing dashboard",
      "icons": [{ "src": "/icon?size=96", "sizes": "96x96" }] 
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+myroofgenius",
      "url": "/?protocol=%s"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "MyRoofGenius Desktop View"
    },
    {
      "src": "/screenshots/mobile.png",
      "sizes": "375x667",
      "type": "image/png",
      "platform": "narrow",
      "label": "MyRoofGenius Mobile View"
    }
  ]
}
